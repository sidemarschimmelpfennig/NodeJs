<%- include('partials/header.ejs') %>
<body>
    <%- include('partials/navbar.ejs') %>
    <div class="container">
        <hr class="top">
        <h1 class="top"><%= question.title %></h1>
        <p class="top">
            <%= question.description %>
        </p>
        <hr class="top">
        <form method="POST" action="/response">
            <h3>Responda</h3>
            <label for="response" class="top">Resposta : </label>
            <textarea placeholder="Digite sua Resposta" class="form-control" name="bodyResponse" ></textarea><br>
            <input type="hidden" name="question" value="<%= question.id %>">
            <button type="submit" class="btn btnYellow">Responder</button>
        </form>
        <hr class="top">
        <% if (responses !== undefined && responses.length > 0) { %>
            <h3>Respostas: </h3>
            <hr class="top">
            <% responses.forEach(response => { %>
                <br>
                <div class="card">
                    <div class="card-body">
                        <p><%= response.body %></p> 
                    </div>
                </div>
            <% }) %>
        <% } else { %>    
            <h3> Desculpe nenhuma resposta no momento ( ˘︹˘ )</h3>
        <% } %>
    </div>
</body>
<%- include('partials/footer.ejs') %>